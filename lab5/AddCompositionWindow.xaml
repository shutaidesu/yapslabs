<Window x:Class="lab5.AddCompositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить композицию" Height="150" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-41">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Исполнитель:"/>
        <TextBox Name="artistTextBox" Grid.Row="0" Margin="5"/>

        <Label Content="Название:" Grid.Row="1"/>
        <TextBox Name="titleTextBox" Grid.Row="1" Margin="5"/>

        <Button Content="Добавить композицию" Grid.Row="2" Margin="5" Click="AddCompositionButton_Click"/>
    </Grid>
</Window>

